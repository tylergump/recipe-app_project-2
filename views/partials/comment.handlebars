<div class="card">
  <div class="card-block">
    <h4 class="card-title">{{this.title}}</h4>
    <p class="card-text">{{this.content}}</p>
    <small class="text-muted">Posted at: {{this.createdAt}}</small>

    <!-- Delete link -->
    <p><form method="POST" action="/recipes/comments/{{this._id}}?_method=DELETE">
        <button class="btn btn-link" type="submit">Delete</button>
    </form></p>
  </div>
</div>