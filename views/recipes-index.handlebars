<!-- recipes-index -->
<head>
              <link rel="stylesheet" href="/css/style.css">

</head>

<h1>Recipes</h1>

<a href="/recipes/new">New Recipe</a>

<div class="row">
  {{#each recipes}}
    <div class="col-md-4">
      <h2><a href="/recipes/{{this._id}}">{{this.title}}</a></h2>
            <p>By <a href="/recipes/{{this._id}}">{{this.author}}</a></p>
      <a href="/recipes/{{this._id}}"><img src="{{this.image}}" alt="image"></a>
    </div>
  {{/each}}
</div>